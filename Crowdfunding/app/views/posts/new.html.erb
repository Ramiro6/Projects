<div class="box-body">
  <div class="type-box2">
    <div class="type-config2">
      <h5 align="center" >New Post</h5>

      <%= form_for @post, html: { multipart: true } do |form| %>
      <div class="avatar-config2">
      <%= form.label :img %> | <%= form.file_field :img %>
      </div>

      <div class="text-config2">
        <div class="text-center">
          <h5><%= form.label :post_text %></h5>
          <%= form.text_area  :post_text, size: "80x10" %>
          <div class="text-center">
            <%= form.submit %>
            <!-- <button type="submit" class="btn-color-config btn btn-primary" name="commit"    value="save">Submit</button> -->
          </div>
        </div>
      </div>
      <% end %>


        <div class="text-center">
          <%= link_to "Back", "/home"%>
        </div>



    </div>

  </div>
